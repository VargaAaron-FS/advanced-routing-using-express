            padding:  2rem 1rem;
            display: flex;
            flex-direction: column;
        }
        h2 {
            margin:  0;
            padding:  0;
        }
        footer {
            border-top: 2px solid #aaa;
            padding: 1rem;
            background: #eee;
        }
    </style>
</head>

<body>
    {% include '../partials/_header.twig' %}
    <main>
        {% block main_content %}
        {% endblock %}
    </main>
    {% include '../partials/_footer.twig' %}
