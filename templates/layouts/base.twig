    <style>
        body {
            font-family: sans-serif;
            margin: 0;
            padding: 0;
        }
        a {
            color:  blue;
        }
        ul {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            column-gap: 2rem;
        }
