<form enctype="multipart/form-data" method="POST" action="/images{% if image.id %}/{{ image.id }}{% endif %}" style="display: flex; flex-direction: column; row-gap: 1rem;">
	{% if image.id %}
		<input type="hidden" name="id" value="{{ image.id }}" />
	{% endif %}
	<div>
		<label for="variant">Variant:</label>
		<select name="variantId" id="">
			{% for variant in variants %}
				<option value="{{ variant.id }}">{{ variant.title }}</option>
			{% endfor %}
		</select>
	</div>
	<div>
		<button type="submit" style="padding: .5rem 1rem; font-weight: 700; cursor: pointer;">Save Image</button>
	</div>
</form>